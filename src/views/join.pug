extends base

block content
    form(method="POST")
        input(type="email", placeholder="이메일 주소", name="email", required)
        input(type="text", placeholder="별명", name="username", required)
        input(type="password", placeholder="비밀번호 입력하세요",name="password", required)
        input(type="password", placeholder="비밀번호 재입력",name="password2", required)
        input(type="text", name="firstName", placeholder="이름", required)
        input(type="text", name="lastName", placeholder="성", required)
        input(type="text", name="address", placeholder="사는 지역")
        input(type="submit", value="회원가입")
    div.auth-switch
        span 계정이 있습니까? 
        a(href="/auth/login") 로그인 &rarr;